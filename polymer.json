{
  "entrypoint": "index.html",
  "shell": "src/shop-app.js",
  "sources": [
    "data/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**",
    "push-manifest.json"
  ],
  "autoBasePath": true,
  "builds": [
    {
      "name": "es5-bundled",
      "js": {
        "minify": true,
        "compile": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": {
        "inlineScripts": false
      },
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
